<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/SayimUrunLayout"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gri2"
            android:layout_weight="14"
            android:columnCount="5"
            android:rowCount="2">

            <TextView
                android:id="@+id/SayimMaterial"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:text="14194"
                android:textAlignment="center"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/SayimPaletNo"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:text="2201001"
                android:textAlignment="center"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/SayimMtext"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowSpan="2"
                android:layout_columnWeight="10"
                android:text="TS YOÄžURT 1500 GR"
                android:textAlignment="textStart"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/SayimMiktar"
                android:layout_marginTop="10dp"
                android:layout_marginEnd ="10dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_rowSpan="2"
                android:text="100"
                android:textAlignment="textEnd"
                android:textSize="20sp"/>

        </GridLayout>
    </LinearLayout>

</LinearLayout>